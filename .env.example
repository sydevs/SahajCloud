# Database (SQLite for local development, D1 binding in production)
DATABASE_URI=file:./local.db

# Payload CMS
PAYLOAD_SECRET=your-payload-secret-key-here

# Wrangler Environment Selection
# Tells getPlatformProxy() to use [env.dev] configuration from wrangler.toml
CLOUDFLARE_ENV=dev

# Sentry Configuration (Optional)
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn-here
SENTRY_DSN=your-sentry-dsn-here
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here # Optional: Only needed for source map uploads

# Email Configuration (Production - Resend)
RESEND_API_KEY=your-resend-api-key-here

# Email Configuration (Development/Fallback - SMTP)
# Used in development when RESEND_API_KEY is not set
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=your-from-email@example.com

# Migration Scripts (Optional)
# Required only for importing content from Storyblok
# STORYBLOK_ACCESS_TOKEN=your-storyblok-token-here

# Application URLs
SAHAJCLOUD_URL=http://localhost:3000
# Production: SAHAJCLOUD_URL=https://sahajcloud.sydevelopers.com

# Live Preview URLs
WEMEDITATE_WEB_URL=http://localhost:5173
# Production: WEMEDITATE_WEB_URL=https://wemeditate.com

SAHAJATLAS_URL=http://localhost:5174
# Production: SAHAJATLAS_URL=https://atlas.sydevelopers.com

# Cloudflare Storage Services (Production Only)
# Development: Falls back to local file storage (no credentials needed)
# Production: Requires configuration below

# Cloudflare Account Information
# Find in Dashboard → Account Home → right sidebar
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Unified API Token for Images & Stream
# API Token with "Account.Cloudflare Images:Edit" and "Account.Stream:Edit" permissions
# In production, set via: wrangler secret put CLOUDFLARE_API_KEY
CLOUDFLARE_API_KEY=your-unified-api-token

# Cloudflare Images Delivery URL
# Find in Images dashboard → copy full delivery URL including hash
# Format: https://imagedelivery.net/<hash>
CLOUDFLARE_IMAGES_DELIVERY_URL=https://imagedelivery.net/your-hash

# Cloudflare Stream Delivery URL
# Find in Stream dashboard → copy full player URL base
# Format: https://customer-<code>.cloudflarestream.com
CLOUDFLARE_STREAM_DELIVERY_URL=https://customer-your-code.cloudflarestream.com

# Cloudflare R2 Delivery URL
# Custom domain configured in Cloudflare R2 + CDN
# Format: https://assets.yourdomain.com
# Development: Falls back to local file storage (not needed)
# Production: https://assets.sydevelopers.com
CLOUDFLARE_R2_DELIVERY_URL=https://assets.sydevelopers.com