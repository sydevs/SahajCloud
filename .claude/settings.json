      "Bash(pnpm generate:types:*)",
      "Bash(pnpm generate:importmap:*)",
      "Bash(pnpm payload migrate:status:*)",
      "Bash(pnpm payload generate:types:*)",
      "Bash(NODE_ENV=development pnpm generate:types)",
      "Bash(NODE_ENV=development pnpm payload generate:types:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr close:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(git log:*)",
      "Bash(git check-ignore:*)",
      "Bash(find:*)",
